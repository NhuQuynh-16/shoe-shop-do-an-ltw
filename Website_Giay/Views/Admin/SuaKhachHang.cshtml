@model Website_Giay.Models.KhachHang

@{
    ViewBag.Title = "Sửa thông tin người dùng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Sửa thông tin người dùng: @Model.HoTen</h3>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("SuaKhachHang", "Admin", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.IdUser)
            @Html.HiddenFor(m => m.Username)
            @Html.HiddenFor(m => m.UserPassword)

            <div class="mb-3">
                <label class="form-label">Họ tên</label>
                @Html.TextBoxFor(m => m.HoTen, new { @class = "form-control", required = "required" })
            </div>

            <div class="mb-3">
                <label class="form-label">Email</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", required = "required" })
            </div>

            <div class="mb-3">
                <label class="form-label">Số điện thoại</label>
                @Html.TextBoxFor(m => m.DienThoai, new { @class = "form-control" })
            </div>

            <div class="mb-3">
                <label class="form-label">Địa chỉ</label>
                @Html.TextAreaFor(m => m.DiaChi, new { @class = "form-control", rows = "3" })
            </div>

            <div class="mb-3">
                <label class="form-label">Vai trò</label>
                @Html.DropDownListFor(m => m.UserRole,
                    new List<SelectListItem>
                    {
                        new SelectListItem { Text = "Khách hàng", Value = "0" },
                        new SelectListItem { Text = "Admin", Value = "1" }
                    },
                    new { @class = "form-control" })
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Lưu thay đổi
                </button>
                <a href="@Url.Action("KhachHang")" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        }
    </div>
</div> 
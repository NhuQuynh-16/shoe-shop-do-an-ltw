@model Website_Giay.Models.SanPham

@{
    ViewBag.Title = "Thêm sản phẩm mới";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Thêm sản phẩm mới</h3>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("ThemSanPham", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="mb-3">
                <label class="form-label">Tên sản phẩm</label>
                @Html.TextBoxFor(m => m.TenSanPham, new { @class = "form-control", required = "required" })
            </div>

            <div class="mb-3">
                <label class="form-label">Mô tả</label>
                @Html.TextAreaFor(m => m.MoTa, new { @class = "form-control", rows = "3" })
            </div>

            <div class="mb-3">
                <label class="form-label">Giá</label>
                @Html.TextBoxFor(m => m.Gia, new { @class = "form-control", type = "number", required = "required" })
            </div>

            <div class="mb-3">
                <label class="form-label">Danh mục</label>
                @Html.DropDownListFor(m => m.IdDanhMuc,
                    new SelectList(ViewBag.DanhMucs, "IdDanhMuc", "TenDanhMuc"),
                    "-- Chọn danh mục --",
                    new { @class = "form-control", required = "required" })
            </div>

            <div class="mb-3">
                <label class="form-label">Hình ảnh</label>
                <input type="file" name="HinhAnh" class="form-control" required />
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Lưu sản phẩm
                </button>
                <a href="@Url.Action("SanPham")" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        }
    </div>
</div> 
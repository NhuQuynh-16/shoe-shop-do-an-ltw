@model Website_Giay.Models.DanhMucGiay

@{
    ViewBag.Title = "Sửa danh mục";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Sửa danh mục: @Model.TenDanhMuc</h3>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("SuaDanhMuc", "Admin", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.IdDanhMuc)

            <div class="mb-3">
                <label class="form-label">Tên danh mục</label>
                @Html.TextBoxFor(m => m.TenDanhMuc, new { @class = "form-control", required = "required" })
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Lưu thay đổi
                </button>
                <a href="@Url.Action("DanhMuc")" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        }
    </div>
</div> 

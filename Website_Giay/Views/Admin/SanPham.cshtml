@model IEnumerable<Website_Giay.Models.SanPham>

@{
    ViewBag.Title = "Quản lý sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Quản lý sản phẩm</h2>
    <a href="@Url.Action("ThemSanPham")" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Thêm sản phẩm mới
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="table-primary">
            <tr>
                <th>ID</th>
                <th>Hình ảnh</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Danh mục</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.IdProduct</td>
                    <td>
                        <img src="~/Content/Images/@item.HinhAnh" alt="@item.TenSanPham" style="max-width: 100px;" />
                    </td>
                    <td>@item.TenSanPham</td>
                    <td>@string.Format("{0:N0}đ", item.Gia)</td>
                    <td>@item.DanhMucGiay.TenDanhMuc</td>
                    <td>
                        <a href="@Url.Action("SuaSanPham", new { id = item.IdProduct })" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i> Sửa
                        </a>
                        <a href="@Url.Action("XoaSanPham", new { id = item.IdProduct })" class="btn btn-danger btn-sm"
                           onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này?');">
                            <i class="bi bi-trash"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div> 

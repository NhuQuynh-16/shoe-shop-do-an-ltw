@model Website_Giay.Models.SanPham

@{
    ViewBag.Title = "Sửa sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Sửa sản phẩm: @Model.TenSanPham</h3>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("SuaSanPham", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(m => m.IdProduct)

            <div class="mb-3">
                <label class="form-label">Tên sản phẩm</label>
                @Html.TextBoxFor(m => m.TenSanPham, new { @class = "form-control", required = "required" })
            </div>

            <div class="mb-3">
                <label class="form-label">Mô tả</label>
                @Html.TextAreaFor(m => m.MoTa, new { @class = "form-control", rows = "3" })
            </div>

            <div class="mb-3">
                <label class="form-label">Giá</label>
                @Html.TextBoxFor(m => m.Gia, new { @class = "form-control", type = "number", required = "required" })
            </div>

            <div class="mb-3">
                <label class="form-label">Danh mục</label>
                @Html.DropDownListFor(m => m.IdDanhMuc,
                    new SelectList(ViewBag.DanhMucs, "IdDanhMuc", "TenDanhMuc"),
                    "-- Chọn danh mục --",
                    new { @class = "form-control", required = "required" })
            </div>

            <div class="mb-3">
                <label class="form-label">Hình ảnh hiện tại</label>
                <div>
                    <img src="~/Content/Images/@Model.HinhAnh" alt="@Model.TenSanPham" style="max-width: 200px;" class="mb-2" />
                </div>
                <label class="form-label">Thay đổi hình ảnh (để trống nếu không muốn thay đổi)</label>
                <input type="file" name="HinhAnh" class="form-control" />
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Lưu thay đổi
                </button>
                <a href="@Url.Action("SanPham")" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        }
    </div>
</div>
 

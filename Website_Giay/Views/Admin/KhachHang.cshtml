@model IEnumerable<Website_Giay.Models.KhachHang>

@{
    ViewBag.Title = "Quản lý người dùng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Quản lý người dùng</h2>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="table-primary">
            <tr>
                <th>ID</th>
                <th>Họ tên</th>
                <th>Email</th>
                <th>Số điện thoại</th>
                <th>Địa chỉ</th>
                <th>Vai trò</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.IdUser</td>
                    <td>@item.HoTen</td>
                    <td>@item.Email</td>
                    <td>@item.DienThoai</td>
                    <td>@item.DiaChi</td>
                    <td>
                        @if (item.UserRole == 1)
                        {
                            <span class="badge bg-danger">Admin</span>
                        }
                        else
                        {
                            <span class="badge bg-primary">Khách hàng</span>
                        }
                    </td>
                    <td>
                        <a href="@Url.Action("SuaKhachHang", new { id = item.IdUser })" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i> Sửa
                        </a>
                        @if (item.UserRole != 1)
                        {
                            <a href="@Url.Action("XoaKhachHang", new { id = item.IdUser })" class="btn btn-danger btn-sm"
                               onclick="return confirm('Bạn có chắc muốn xóa người dùng này?');">
                                <i class="bi bi-trash"></i> Xóa
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div> 
@{
    ViewBag.Title = "ThongTinDH";
    Layout = "~/Views/Shared/_Layout_TrangChinh.cshtml";
}
@model Website_Giay.Models.KhachHang

<div class="container my-4">
    <h2>Thông tin tài khoản</h2>
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <div class="mb-3">
                        <label class="fw-bold">Tên đăng nhập:</label>
                        <p>@Model.Username</p>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">Họ tên:</label>
                        <p>@Model.HoTen</p>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">Email:</label>
                        <p>@Model.Email</p>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">Số điện thoại:</label>
                        <p>@Model.DienThoai</p>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">Địa chỉ:</label>
                        <p>@Model.DiaChi</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 

@{
    ViewBag.Title = "Lịch sử đơn hàng";
    Layout = "~/Views/Shared/_Layout_TrangChinh.cshtml";
}
@model List<Website_Giay.Models.DonHang>


<div class="container my-4">
    <h2>Lịch sử đơn hàng</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Bạn chưa có đơn hàng nào.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Mã đơn hàng</th>
                        <th>Ngày đặt</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th>Địa chỉ giao hàng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var donHang in Model)
                    {
                        <tr>
                            <td>@donHang.IdDonHang</td>
                            <td>
                                @(donHang.NgayDatHang != null
                                    ? donHang.NgayDatHang.Value.ToString("dd/MM/yyyy HH:mm")
                                    : "")
                            </td>
                            <td>@donHang.TongTien.ToString("N0") VNĐ</td>
                            <td>@donHang.TrangThai</td>
                            <td>@donHang.DiaChiGiaoHang</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div> 
